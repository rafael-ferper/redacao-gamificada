{{!
  @template mod_moodleoverflow/answer

  Moodleoverflow answer template.
  The purpose of this template is to render an answer in the discussion.

   Example context (json):
   {
   }
}}


{{! Start the post. Mark it read or unread. }}
<div class="w-100">
    <textarea
            rows="3"
            class="form-control reject-reason"
            placeholder="{{#str}} give_a_reason, mod_moodleoverflow {{/str}}"
    ></textarea>
    <div class="d-flex mt-2">
        <a class="btn btn-danger mr-2" data-moodleoverflow-action="reject-submit">{{#str}}reject, mod_moodleoverflow{{/str}}</a>
        <a class="btn btn-secondary" data-moodleoverflow-action="reject-cancel">{{#str}}cancel{{/str}}</a>
    </div>
</div>