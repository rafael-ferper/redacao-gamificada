{{!
    Drop snippet dialogue.
}}
<div class="block-stash-drop-snippet-dialogue">
    <div>
        {{>block_stash/drop_snippet_ui}}
    </div>
    <div class="block-stash-drop-summary">
        <hr>
        <h6>{{#str}}dropsummary, block_stash{{/str}} <a title="{{#str}}editdrop, block_stash, {{drop.name}}{{/str}}" href="{{drop.editurl}}">{{#pix}}t/edit, core{{/pix}}</a></h6>
        <p>
            {{#str}}maxpickup, block_stash{{/str}}:&nbsp;{{drop.maxpickupformatted}},
            {{#str}}pickupinterval, block_stash{{/str}}:&nbsp;{{drop.pickupintervalformatted}}
        </p>
    </div>
</div>
