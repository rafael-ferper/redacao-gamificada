{{!
    Trade item edit detail.
}}

<tr class="block-stash-trade-item" data-id="{{itemid}}">
    <td style="width: 70%;">{{>block_stash/item_xsmall}} {{name}}</td>
    <td style="width: 20%;">
        <input class="block-stash-quantity form-control" type="number" name="lose_item[{{itemid}}]" value="{{quantity}}" />
    </td>
    <td style="width: 10%;">
        <span class="block-stash-delete-item" data-id="{{itemid}}"><a title="" href="#">{{#pix}}t/delete, core{{/pix}}</a></span>
    </td>
</tr>
